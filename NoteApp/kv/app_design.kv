<AppScreenManager>:
    HomeScreen:
    NoteEditorScreen:
    SettingsScreen:

<HomeScreen>:
    name: 'home'
    FloatLayout:
        # Dropdown Menu Button in the Top-Left Corner
        Button:
            text: 'Menu'
            size_hint: None, None
            size: 120, 50  # Adjust the button size as needed
            pos_hint: {'x': 0.02, 'y': 0.9}  # Position in the upper-left corner
            on_release: app.open_dropdown(self)

        # Title Label (Centered)
        Label:
            text: 'My Notes'
            font_size: 32
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'y': 0.8}

        # Notes List Placeholder
        Label:
            text: 'No Notes Yet!'
            font_size: 20
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'y': 0.5}
        
